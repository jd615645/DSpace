				<!--<entry key="123456789/7621" value-ref="defaultConfiguration"/> -->
			</map>
		</property>
		<property name="toIgnoreMetadataFields">
			<map>
				<entry>
					<key>
						<util:constant static-field="org.dspace.core.Constants.COMMUNITY" />
					</key>
					<list>
						<!--Introduction text -->
